extends layouts/app
block styles 
    link(rel="stylesheet" href="/css/product.css")
block content
    main 
        .grid 
            each product in products
                article.card.product-item 
                    header.card__header 
                        h1.product__title #{product.title}
                    .card__image
                        img(src="https://assets.entrepreneur.com/content/3x2/2000/20191219170611-GettyImages-1152794789.jpeg?width=700&crop=2:1", alt="A Book")
                    .card__content 
                        h2.product__price 
                        p.product__description 
                    .card__actions
                        button.btn 
            else
                h1 No Products Registered